
{
  "extends": ["eslint:recommended", "plugin:n/recommended", "prettier"],
  "plugins": ["n", "prettier"],
  "rules": {
    "block-scoped-var": "error",
    "eqeqeq": "error",
    "no-var": "error",
    "prefer-const": "error",
    "eol-last": "error",
    "prefer-arrow-callback": "error",
    "no-trailing-spaces": "error",
    "quotes": ["warn", "single", {"avoidEscape": true}],
    "no-restricted-properties": [
      "error",
      {
        "object": "describe",
        "property": "only"
      },
      {
        "object": "it",
        "property": "only"
      }
    ]
  },
  "env": {
    "es2023": true,
    "jest/globals": true
  },
  "parserOptions": {
		"ecmaVersion": 13
  },
  "plugins": [
    "jest"
  ]
}
